rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Check if user is the owner of the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Check if user has admin role

    // Check if user has admin role
    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isActive == true;
    }

    // Check if an appointment belongs to the signed-in user
    function isAppointmentOwner(appointmentId) {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/appointments/$(appointmentId)) &&
             get(/databases/$(database)/documents/appointments/$(appointmentId)).data.userId == request.auth.uid;
    }

    // ============================================================================
    // USERS COLLECTION
    // ============================================================================

    match /users/{userId} {
      // Users can read their own profile, admins can read all profiles
      allow read: if isOwner(userId) || isAdmin();

      // Users can create their own profile on signup
      allow create: if isSignedIn() &&
                       isOwner(userId) &&
                       request.resource.data.keys().hasAll(['email', 'role', 'isActive']) &&
                       request.resource.data.role == 'user' &&
                       request.resource.data.uid == request.auth.uid;

      // Users can update their own profile (limited fields)
      // Admins can update any profile (all fields)
      allow update: if isSignedIn() && (
        // User updating own profile (cannot change role or uid)
        (isOwner(userId) &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'uid', 'createdAt'])) ||
        // Admin updating any profile
        isAdmin()
      );

      // Only admins can delete users
      allow delete: if isAdmin();
    }

    // ============================================================================
    // APPOINTMENTS COLLECTION
    // ============================================================================

    match /appointments/{appointmentId} {
      // Users can read all appointments for availability checking (double-booking prevention)
      // Note: This is safe because appointment data doesn't contain sensitive personal info
      // Users can only update/delete their own appointments
      allow read: if isSignedIn();

      // Users can create appointments for themselves
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'service', 'dateTime', 'status']);

      // Users can update their own appointments (limited fields)
      // Admins can update any appointment (all fields including status)
      allow update: if isSignedIn() && (
        // User updating own appointment (cannot change userId or certain fields)
        (resource.data.userId == request.auth.uid &&
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['userId', 'referenceNumber', 'createdAt']) &&
         request.resource.data.status in ['pending', 'cancelled']) ||
        // User submitting a rating: only allow rating and ratedAt fields to change
        (resource.data.userId == request.auth.uid &&
         request.resource.data.diff(resource.data).changedKeys().size() <= 2 &&
         request.resource.data.diff(resource.data).changedKeys().hasAny(['rating', 'ratedAt']) &&
         !request.resource.data.diff(resource.data).changedKeys().hasAny(['userId', 'referenceNumber', 'createdAt', 'service', 'dateTime', 'motorDetails', 'status']) &&
         request.resource.data.rating is int &&
         request.resource.data.rating >= 1 && request.resource.data.rating <= 5) ||
        // Admin updating any appointment
        isAdmin()
      );

      // Users can delete their own appointments, admins can delete any
      allow delete: if isSignedIn() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );
    }

    // ============================================================================
    // FEEDBACK COLLECTION
    // ============================================================================

    match /feedback/{feedbackId} {
      // Only admins can read feedback
      allow read: if isAdmin();

      // Users can create rating feedback for their own appointment
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'appointmentId', 'rating', 'createdAt']) &&
                       request.resource.data.appointmentId is string &&
                       request.resource.data.rating is int &&
                       request.resource.data.rating >= 1 && request.resource.data.rating <= 5 &&
                       isAppointmentOwner(request.resource.data.appointmentId);

      // Only admins can update or delete feedback
      allow update, delete: if isAdmin();
    }

    // ============================================================================
    // TESTIMONIALS COLLECTION
    // ============================================================================
    match /testimonials/{docId} {
      // Testimonials are public by default (adjust as needed)
      allow read: if true;
      // Authenticated users can create their own testimonial
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.message is string &&
                       request.resource.data.createdAt is timestamp;
      // Updates/deletes restricted to admins (optional)
      allow update, delete: if isAdmin();
    }

    // ============================================================================
    // SECURITY LOGS COLLECTION
    // ============================================================================

    match /security_logs/{logId} {
      // Only admins can read security logs
      allow read: if isAdmin();

      // Server-side writes only (through Cloud Functions or Admin SDK)
      allow write: if false;
    }

    // ============================================================================
    // AUDIT LOGS COLLECTION
    // ============================================================================

    match /audit_logs/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();

      // Authenticated users can create audit entries for their own actions
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid;

      // No updates or deletes allowed
      allow update, delete: if false;
    }

    // ============================================================================
    // MONITORING LOGS COLLECTION
    // ============================================================================

    match /logs/{logId} {
      // Only admins can read logs
      allow read: if isAdmin();

      // Authenticated users can write logs
      allow create: if isSignedIn();

      // No updates allowed, only admins can delete for cleanup
      allow update: if false;
      allow delete: if isAdmin();
    }

    // ============================================================================
    // SECURITY COLLECTION (Account lockout, failed attempts, etc.)
    // ============================================================================

    match /security/{document=**} {
      // Only admins can read security-related data
      allow read: if isAdmin();

      // Server-side writes only (through Cloud Functions or Admin SDK)
      allow write: if false;
    }

    // ============================================================================
    // PERFORMANCE METRICS COLLECTION
    // ============================================================================

    match /performance_metrics/{metricId} {
      // Only admins can read performance metrics
      allow read: if isAdmin();

      // Server-side writes only (through Cloud Functions or Admin SDK)
      allow write: if false;
    }

    // ============================================================================
    // CACHE COLLECTION (Optional, for CacheService)
    // ============================================================================

    match /cache/{userId}/{document=**} {
      // Users can read and write their own cache
      allow read, write: if isSignedIn() && userId == request.auth.uid;
    }

    // ============================================================================
    // DEFAULT DENY ALL OTHER COLLECTIONS
    // ============================================================================

    // Any collection not explicitly defined above is denied by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
